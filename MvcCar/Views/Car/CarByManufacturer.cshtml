@model IEnumerable<MvcCar.Models.CAR>
@{
    ViewBag.Title = "CarByManufacturer";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="text-align:center; color:red">CAR BY MANUFACTURER</h3>
<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "Car", new { id = car.CarID})">
                    <img alt="@car.CarName" src="~/Images/@car.Image" width="250" height="200"/>
                </a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="@Url.Action("Details", "Car", new { id = car.CarID})"> @car.CarName</a>
                    </h4>
                    <h5>@car.Price VND/Day </h5>
                </div>
                <div class="card-footer">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
            </div>
        </div>
    }


</div>

