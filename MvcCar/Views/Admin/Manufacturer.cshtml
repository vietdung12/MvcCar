@using MvcCar.Models
@using PagedList.Mvc;
@model PagedList.PagedList<CARMANUFACTURER>

@{
    ViewBag.Title = "Manufacturer";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Manufacturer</h2>

<p>
    @Html.ActionLink("Create New", "CreateM")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().CarManuName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarManuName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "EditM", new { id=item.CarManuID }) |*@
            @Html.ActionLink("Details", "DetailsM", new { id=item.CarManuID }) |
            @Html.ActionLink("Delete", "DeleteM", new { id=item.CarManuID })
        </td>
    </tr>
}

</table>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Manufacturer", new { page = page }))
</div>
<style>
    .MenuPage li {
        display: inline;
    }
</style>